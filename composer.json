{
	"name"			: "ipub/images",
	"type"			: "library",
	"description"	: "Image storage & generator for Nette Framework",
	"keywords"		: ["nette", "images", "tools", "ipub", "ipublikuj", "ondemand"],
	"homepage"		: "https://github.com/iPublikuj/images",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/images/issues"
	},

	"require": {
		"php"	: ">=7.0.0",

		"ipub/flysystem"	: "dev-Nette24Compatibility",

		"nette/application"	: "~2.3@dev",
		"nette/di"			: "~2.3@dev",
		"nette/http"		: "~2.3@dev",
		"nette/utils"		: "~2.3@dev",

		"latte/latte"	: "~2.3@dev"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.3@dev",
		"nette/mail"			: "~2.3@dev",
		"nette/robot-loader"	: "~2.3@dev",
		"nette/safe-stream"		: "~2.3@dev",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev"
	},

	"autoload": {
		"psr-0": {
			"IPub\\Images\\": "src/"
		},
		"classmap": [
			"src/IPub/Images/Application/Presenter.php"
		]
	}
}
